@model Unity.Mvc3.Example.Models.MarketCapture

@{
    ViewBag.Title = "Default Market Capture";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>MarketCapture</legend>      

        <div class="editor-label">
            @Html.LabelForModel(MyResources.Resources.Firstname)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Firstname)
            @Html.ValidationMessageFor(model => model.Firstname)
        </div>

        <div class="editor-label">
            @Html.LabelForModel(MyResources.Resources.Lastname)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Lastname)
            @Html.ValidationMessageFor(model => model.Lastname)
        </div>

        <div class="editor-label">
            @Html.LabelForModel(MyResources.Resources.Emailaddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Emailaddress)
            @Html.ValidationMessageFor(model => model.Emailaddress)
        </div>

        <div class="editor-label">
            @Html.LabelForModel(MyResources.Resources.Phonenumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phonenumber)
            @Html.ValidationMessageFor(model => model.Phonenumber)
        </div>

        <div class="editor-label">
            @Html.LabelForModel(MyResources.Resources.Address1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address1)
            @Html.ValidationMessageFor(model => model.Address1)
        </div>

        <div class="editor-label">
             @Html.LabelForModel(MyResources.Resources.Address2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address2)
            @Html.ValidationMessageFor(model => model.Address2)
        </div>

        <div class="editor-label">
            @Html.LabelForModel(MyResources.Resources.City)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.City)
            @Html.ValidationMessageFor(model => model.City)
        </div>

        <div class="editor-label">
             @Html.LabelForModel(MyResources.Resources.State)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.State)
            @Html.ValidationMessageFor(model => model.State)
        </div>

        <div class="editor-label">
             @Html.LabelForModel(MyResources.Resources.Country)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Country)
            @Html.ValidationMessageFor(model => model.Country)
        </div> 
        @Model.Thanks

        <p>
            <input type="submit" value="@MyResources.Resources.Submit" />
        </p>
    </fieldset>
}
